						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has success field\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('success');",
									"    pm.expect(jsonData.success).to.eql(true);",
									"});",
									"",
									"pm.test(\"JWT token received\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('data');",
									"    pm.expect(jsonData.data).to.have.property('jwt');",
									"    ",
									"    // Store admin token",
									"    pm.environment.set('adminToken', jsonData.data.jwt);",
									"    console.log('Admin token stored:', jsonData.data.jwt.substring(0, 50) + '...');",
									"});",
									"",
									"pm.test(\"Refresh token received\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('refreshToken');",
									"    ",
									"    // Store admin refresh token",
									"    pm.environment.set('adminRefreshToken', jsonData.data.refreshToken);",
									"    console.log('Admin refresh token stored');",
									"});",
									"",
									"pm.test(\"Token is valid JWT format\", function () {",
									"    var jsonData = pm.response.json();",
									"    var token = jsonData.data.jwt;",
									"    var tokenParts = token.split('.');",
									"    pm.expect(tokenParts).to.have.lengthOf(3);",
									"});",
									"",
									"pm.test(\"User information included\", function () {",
									"    var jsonData = pm.response.json();",
