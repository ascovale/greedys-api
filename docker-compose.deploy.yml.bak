services:
  spring-app:
    image: registry.gitlab.com/psychoorange/greedys_api/spring-app@sha256:<digest>
    ports:
      - "5050:8443"
    deploy:
      replicas: 1
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
    depends_on:
      - db
      - rabbitmq
    networks:
      - app-network
    environment:
      SPRING_PROFILES_ACTIVE: "docker"
    secrets:
      - keystore_password
      - db_password
      - mail_password
      - rabbitmq_password

  db:
    image: mysql:8.0
    environment:
      MYSQL_DATABASE: greedys_v1
      MYSQL_ROOT_PASSWORD_FILE: /run/secrets/db_password
    ports:
      - "3307:3306"
    volumes:
      - db_data:/var/lib/mysql
    networks:
      - app-network
    healthcheck:
      test: ["CMD-SHELL", "mysqladmin ping -h localhost -uroot -p\"$$(cat /run/secrets/db_password)\" || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
    secrets:
      - db_password

  rabbitmq:
    image: rabbitmq:management
    environment:
      RABBITMQ_DEFAULT_USER: ascovale
    ports:
      - "5672:5672"
      - "15672:15672" 
    networks:
      - app-network
    volumes:
      - rabbitmq_data:/var/lib/rabbitmq
    healthcheck:
      test: ["CMD-SHELL", "rabbitmqctl status --quiet || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 5
    command: >
      sh -c "export RABBITMQ_DEFAULT_PASS=$$(cat /run/secrets/rabbitmq_password) && \
             exec rabbitmq-server"
    secrets:
      - rabbitmq_password

networks:
  app-network:
    external: true

volumes:
  db_data:
  rabbitmq_data:

secrets:
  keystore_password:
    external: true
  db_password:
    external: true
  mail_password:
    external: true
  rabbitmq_password:
    external: true
